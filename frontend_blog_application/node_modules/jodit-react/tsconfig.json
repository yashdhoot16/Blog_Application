{
	"compilerOptions": {
		"target": "es2015",
		"module": "ESNext",
		"outDir": "./build",
		"declaration": true,
		"declarationDir": "./build/types",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
    "moduleDetection": "force",
    "allowJs": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"noImplicitAny": true
	}
}
